<p id="notice"><%= notice %></p>

<h1>Toput</h1>

<table>
  <thead>
    <tr>
      <th><%= link_to 'アウトプット', new_post_path %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td class="output"><%= post.article %></td>
        <td><%= link_to '編集', edit_post_path(post) %></td>
        <td><%= link_to '消去', post, method: :delete, data: { confirm: '消去しますか？' } %></td>
        <td><a href="https://twitter.com/share?url=#{post.article}" class="twitter-share-button"  data-text="<%= post.article %>" data-lang="ja" data-size="large" data-hashtags="Toput" data-dnt="true">ツイート</a> </td>
        <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
      </tr>
    <% end %>
  </tbody>
</table>

